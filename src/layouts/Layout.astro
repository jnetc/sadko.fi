// Get language from Astro Runtime API
const lang = Astro.currentLocale as 'ru' | 'fi';
// const response = await single(query, 'common_data', lang);
// const data = response.data as ICommonData;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="alternate" href="https://sadko.fi/ru" hreflang="ru" />
    <link rel="alternate" href="https://sadko.fi/fi/" hreflang="fi" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta name="googlebot" content="index, follow" />
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="sadko" />

    <meta name="generator" content={Astro.generator} />
    <meta name="rating" content="General" />

    <meta name="geo.region" content="FI" />
