---
const lang = Astro.currentLocale as 'ru' | 'fi';

interface Props {
  data: string;
}

const { data } = Astro.props;
---

<div class="footer__logo">
  <a href=`/${lang}` class="footer__logo" title="sadko.fi" aria-label="sadko.fi">
    <img src="/svg/logo.svg" alt="sadko logo" width="106" height="36" />
  </a>
  <p>{data}</p>
</div>

<style>
  .footer__logo {
    grid-column: 2;
    display: flex;
    flex-direction: column;
    gap: var(--gap-8);
  }

  .footer__logo img {
    width: min(50%, 200px);
    height: auto;
    /* width: 200px; */
    /* height: 70px; */
  }

  @media (max-width: 960px) {
    .footer__logo {
      grid-column: 1;
    }
  }
</style>
