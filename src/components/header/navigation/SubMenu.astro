---
import type { ISubMenu } from "@Types";
import SubColumn from "./SubColumn.astro";

interface Props {
  subMenu: Array<{ columnName: string; columns: Array<ISubMenu> }>;
  index: number;
}

const { subMenu, index } = Astro.props;
---

<ul class=`subnav subnav-${index}` role="menu">
  {
    subMenu.map((sub) => (
      <SubColumn columnName={sub.columnName} columns={sub.columns} />
    ))
  }
</ul>

<style is:global>
  .subnav {
    opacity: 0;
    display: flex;
    justify-content: center;
    padding-block: var(--gap-32);
    position: absolute;
    inset-inline: 0 0;
    top: var(--gap-96);
    background-color: var(--white);
    border-radius: var(--border-corner-24);
    transition: all 0.1s cubic-bezier(0, 0.71, 0.6, 1.03);
    translate: 0 -3rem;
    box-shadow:
      0 30px 25px var(--opacity-3),
      0 10px 10px var(--opacity-3);
    pointer-events: none;
    z-index: -2;

    &::before {
      content: "";
      position: absolute;
      inset: 0;
      translate: 0 -100px;
      background-color: transparent;
      z-index: -3;
    }
  }

  @media screen and (max-width: 1199px) {
    .subnav {
      position: relative;
      top: 0;
      padding-inline: 0;
      padding-block: 0;
      overflow: hidden;
      translate: 0 0;
      z-index: 99;
    }
  }
  @media screen and (max-width: 767px) {
    .subnav {
      flex-direction: column;
    }
  }
</style>
