---
// Components
import Languages from '@Components/header/Languages.astro';
import Logo from '@Components/header/Logo.astro';
import Navigation from '@Components/header/navigation/Navigation.astro';

interface Props {
  data?: string;
}
const { data } = Astro.props;
---

<header class="grid header">
  {
    data ? (
      <div class="notification">
        <p>{data}</p>
      </div>
    ) : null
  }
  <Logo />
  <Navigation />
  <Languages />
</header>

<style>
  .header {
    height: min-content;
    align-items: center;
    padding-block: var(--gap-18);
    z-index: 100;
  }

  .notification {
    grid-column: 1 / -1;
    display: flex;
    justify-content: center;
    padding: var(--gap-12) var(--gap-16);
    margin-block-start: var(--gap-16);
    background-color: var(--red);
  }

  .notification p {
    width: min(min-content, 1200px);
    color: var(--white);
    font-size: var(--font-14);
    font-style: normal;
  }
  @media screen and (max-width: 1199px) {
    .notification {
      margin-block-start: var(--gap-36);
    }
  }
</style>
