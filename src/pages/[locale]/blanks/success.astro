---
// Global Styles
import '@Styles/articles_page.css';
// Layouts
import Layout from '@Layouts/Layout.astro';
// Locale
import { locale_404 } from '@Locales/404';

const lang = Astro.params.locale as 'ru' | 'fi';
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Ваша форма была отправлена</title>
  <meta name="robots" content="noindex nofollow" />
</head>

<Layout>
  <main class="grid separator blank">
    <img src="/svg/page_404.svg" alt="page not found" />
    <h1>{locale_404[lang].success_h1}</h1>
    <a href=`/${lang}` class="btn btn-secondary btn-404 revers arrow-icon">
      {locale_404[lang].btn}
      <span class="btn__icon" aria-hidden="true">
        <svg>
          <use xlink:href="/svg/ui_icons.svg#arrow_outward" data-xlink="arrow_outward"></use>
        </svg>
      </span>
    </a>
  </main>
</Layout>

<style>
  main {
    flex-grow: 1;
    grid-template-rows: 1fr repeat(4, auto) 1fr;
    gap: var(--gap-16);
  }

  .btn-404,
  img,
  h1,
  p {
    grid-column: 2 / -2;
    text-align: center;
    justify-self: center;
  }

  img {
    grid-row: 2;
    min-height: 160px;
  }

  h1 {
    grid-row: 3;
    font-size: clamp(var(--font-32), 7vw, var(--font-48));
    color: var(--black);
  }

  p {
    grid-row: 4;
    max-width: 70ch;
    padding-block-end: var(--gap-24);
  }

  .btn-404 {
    grid-row: 5;
  }
</style>
